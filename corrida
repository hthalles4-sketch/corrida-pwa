<script>
function calcular() {
  let ganho = parseFloat(ganho.value);
  let dist = parseFloat(dist.value);
  let tempo = parseFloat(tempo.value) / 60;
  let consumo = parseFloat(consumo.value);
  let comb = parseFloat(comb.value);
  let manut = parseFloat(manut.value);
  let deprec = parseFloat(deprec.value);

  let custoComb = (dist / consumo) * comb;
  let custoManut = dist * manut;
  let custoDeprec = dist * deprec;
  let custoTotal = custoComb + custoManut + custoDeprec;
  let lucro = ganho - custoTotal;

  let lucroKm = lucro / dist;
  let lucroHora = lucro / tempo;

  let ok = lucroKm >= 1.8 && lucroHora >= 25;

  resultado.innerHTML = `
    <h3 class="${ok ? 'ok' : 'no'}">
      ${ok ? 'âœ… Vale a pena' : 'âŒ NÃ£o vale a pena'}
    </h3>
    <p><strong>Lucro:</strong> R$ ${lucro.toFixed(2)}</p>
    <p>â›½ CombustÃ­vel: R$ ${custoComb.toFixed(2)}</p>
    <p>ğŸ”§ ManutenÃ§Ã£o: R$ ${custoManut.toFixed(2)}</p>
    <p>ğŸ“‰ DepreciaÃ§Ã£o: R$ ${custoDeprec.toFixed(2)}</p>
    <p><strong>R$/km:</strong> ${lucroKm.toFixed(2)}</p>
    <p><strong>R$/hora:</strong> ${lucroHora.toFixed(2)}</p>
  `;
}

if ('serviceWorker' in navigator) {
  navigator.serviceWorker.register('service-worker.js');
}
</script>

